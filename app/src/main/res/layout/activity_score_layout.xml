<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="48dp">

    <TextView
        android:id="@+id/tvCurrentWord"
        android:layout_width="250dp"
        android:layout_height="44dp"
        android:fontFamily="@font/open_sans"
        android:gravity="center_vertical"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvCurrentScore"
        android:layout_width="23dp"
        android:layout_height="30dp"
        android:fontFamily="@font/open_sans"
        android:gravity="center_vertical"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvCurrentWord"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivStarImage"
        android:layout_width="36dp"
        android:layout_height="25dp"
        android:contentDescription="@string/star"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvCurrentScore"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ui_full_star"
        tools:ignore="ImageContrastCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>