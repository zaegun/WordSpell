<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/displayPicture"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#79EDB0"
    tools:context=".WordSpell">

    <androidx.cardview.widget.CardView
        android:id="@+id/main_menu_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"
        app:cardBackgroundColor="#2196F3"
        app:cardCornerRadius="18dp"
        app:contentPadding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/main_menu_card_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="12dp"
            app:contentPadding="20dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/letter7"
                    android:layout_width="58dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="132dp"
                    android:backgroundTint="#9555FF"
                    android:onClick="useButton7"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:contentDescription="Btn7"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/letter8"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/letter6" />

                <Button
                    android:id="@+id/letter1"
                    android:layout_width="58dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="24dp"
                    android:backgroundTint="#9555FF"
                    android:onClick="useButton1"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:contentDescription="Btn2"
                    app:layout_constraintBottom_toTopOf="@+id/letter5"
                    app:layout_constraintEnd_toStartOf="@+id/letter2"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent" />

                <Button
                    android:id="@+id/letter2"
                    android:layout_width="58dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="24dp"
                    android:backgroundTint="#9555FF"
                    android:onClick="useButton2"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:contentDescription="Btn2"
                    app:layout_constraintBottom_toTopOf="@+id/letter6"
                    app:layout_constraintEnd_toStartOf="@+id/letter3"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/letter1" />

                <Button
                    android:id="@+id/letter3"
                    android:layout_width="58dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="24dp"
                    android:backgroundTint="#9555FF"
                    android:onClick="useButton3"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:contentDescription="Btn3"
                    app:layout_constraintBottom_toTopOf="@+id/letter7"
                    app:layout_constraintEnd_toStartOf="@+id/letter4"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/letter2" />

                <Button
                    android:id="@+id/letter4"
                    android:layout_width="58dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="24dp"
                    android:backgroundTint="#9555FF"
                    android:onClick="useButton4"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:contentDescription="Btn4"
                    app:layout_constraintBottom_toTopOf="@+id/letter8"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/letter3" />

                <Button
                    android:id="@+id/letter5"
                    android:layout_width="58dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="132dp"
                    android:backgroundTint="#9555FF"
                    android:onClick="useButton5"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:contentDescription="Btn5"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/letter6"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent" />

                <Button
                    android:id="@+id/letter6"
                    android:layout_width="58dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="132dp"
                    android:backgroundTint="#9555FF"
                    android:onClick="useButton6"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:contentDescription="Btn6"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/letter7"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/letter5" />

                <Button
                    android:id="@+id/letter8"
                    android:layout_width="58dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="132dp"
                    android:backgroundTint="#9555FF"
                    android:onClick="useButton8"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:contentDescription="Btn8"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/letter7" />

                <ImageView
                    android:id="@+id/imageDisplay"
                    android:layout_width="253dp"
                    android:layout_height="174dp"
                    android:layout_marginTop="72dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/img_apple" />

                <TextView
                    android:id="@+id/answerDisplay"
                    android:layout_width="268dp"
                    android:layout_height="94dp"
                    android:layout_marginTop="4dp"
                    android:textAlignment="center"
                    android:textColor="#1E7ABE"
                    android:textIsSelectable="false"
                    android:textSize="60sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.486"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageDisplay" />

                <TextView
                    android:id="@+id/continuePrompt"
                    android:layout_width="268dp"
                    android:layout_height="48dp"
                    android:layout_marginBottom="28dp"
                    android:textAlignment="center"
                    android:letterSpacing=".1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.509"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/completeText"
                    app:layout_constraintVertical_bias="0.697" />

                <TextView
                    android:id="@+id/completeText"
                    android:layout_width="133dp"
                    android:layout_height="33dp"
                    android:layout_marginTop="16dp"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/letter7"
                    app:layout_constraintVertical_bias="0.024" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="54dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="9dp"
                    app:layout_constraintBottom_toBottomOf="@+id/audioBtn"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/audioBtn"
                    app:srcCompat="@drawable/ui_full_star" />

                <TextView
                    android:id="@+id/scoreDisplay"
                    android:layout_width="75dp"
                    android:layout_height="47dp"
                    android:layout_marginTop="16dp"
                    android:text="3"
                    android:textAlignment="textEnd"
                    android:textSize="34sp"
                    app:layout_constraintEnd_toStartOf="@+id/imageView2"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/audioBtn"
                    android:layout_width="73dp"
                    android:layout_height="74dp"
                    android:backgroundTint="#00FFFFFF"
                    android:scaleType="centerInside"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ui_audio_button" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>